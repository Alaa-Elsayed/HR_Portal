@using HRPortal.Core
@helper ShowLanguageButton()
{
    if (LocalizationHelper.IsRighToLeft())
    {
        <input type="image" class="img-circle elevation-2" data-toggle="tooltip" data-placement="left" title="Switch to English" src="@Url.Content("~/Content/Images/gb.svg")" onclick="ChangeLanguage('@LocalizedLanguages.English')" alt="English" width="32" height="32">
    }
    else
    {
        <input type="image" class="img-circle elevation-2" data-toggle="tooltip" data-placement="left" title="اللغة العربية" src="@Url.Content("~/Content/Images/eg.svg")" onclick="ChangeLanguage('@LocalizedLanguages.Arabic')" alt="اللغة العربية" width="32" height="32">
    }
}
<nav class="main-header navbar navbar-expand navbar-dark navbar-primary elevation-2">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            @Html.ActionLink("Home", "Index", "Home", new { area = "", controller = "Home" }, new { id = "log-out", @class = "nav-link" })
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class='@(LocalizationHelper.IsRighToLeft() ? "navbar-nav mr-auto-navbav" : "navbar-nav ml-auto")'>
        <li class="nav-item">
            @ShowLanguageButton()
        </li>
        <li class="nav-item dropdown user-menu">

            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <img src='@Url.Content("~/Content/Images/avatar.png")' class="user-image img-circle elevation-2" alt="User Image">
                <span class="d-none d-md-inline">@Context.User.Identity.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <!-- User image -->
                <li class="user-header bg-primary">
                    <img src='@Url.Content("~/Content/Images/avatar.png")' class="img-circle elevation-2" alt="User Image">
                    <p>
                        @Context.User.Identity.Name
                        <small>@DateTime.Now.ToString()</small>
                    </p>
                </li>
                <!-- Menu Body -->
                <!-- Menu Footer-->
                <li class="user-footer">
                    <a id="log-out" href="#" class="btn btn-default btn-flat float-right" onclick="confirmLogout('@LocalizedStrings.Msg_LogoutConfirm','@LocalizedStrings.LogOut','@LocalizedStrings.Cancel','@Url.Action("Logout", "Account", new { area = "", controller = "Home" })')">@LocalizedStrings.LogOut</a>
                </li>
            </ul>
        </li>
    </ul>
</nav>
